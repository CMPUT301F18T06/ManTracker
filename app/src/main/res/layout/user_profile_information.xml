<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UserProfileActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="202dp"
        android:layout_height="164dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/actor" />

    <TextView
        android:id="@+id/userProfileUsername"
        android:layout_width="269dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/userProfilePhoneHeader"
        android:layout_width="83dp"
        android:layout_height="31dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="8dp"
        android:text="@string/PhoneHeader"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userProfileUsername" />

    <TextView
        android:id="@+id/userProfilePhone"
        android:layout_width="210dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/userProfilePhoneHeader"
        app:layout_constraintTop_toBottomOf="@+id/userProfileUsername" />

    <TextView
        android:id="@+id/userProfileEmailHeader"
        android:layout_width="83dp"
        android:layout_height="31dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="12dp"
        android:text="@string/EmailHeader"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userProfilePhoneHeader" />

    <TextView
        android:id="@+id/userProfileEmail"
        android:layout_width="214dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/userProfileEmailHeader"
        app:layout_constraintTop_toBottomOf="@+id/userProfilePhone" />
</android.support.constraint.ConstraintLayout>